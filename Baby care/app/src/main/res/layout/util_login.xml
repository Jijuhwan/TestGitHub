<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.03"/>
    <TextView
        android:id="@+id/tv"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="유아 돌보미"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.03"/>

    <EditText
        android:id="@+id/etID"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.08"
        android:layout_gravity="center"
        android:hint="ID를 입력해주세요."
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:maxLength="20"
        android:background="@drawable/shape_list"
        android:focusable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.005"/>
    <EditText
        android:id="@+id/etPW"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.08"
        android:layout_gravity="center"
        android:hint="PassWord를 입력해주세요."
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@id/etID"
        android:maxLength="20"
        android:background="@drawable/shape_list"   />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.023"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imgRegist"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="signUp"
            android:clickable="true"
            android:src="@drawable/registbutton" />

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_centerInParent="true"
            android:layout_below="@+id/btnRegist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:onClick="signEnd"
            android:clickable="true"
            android:src="@drawable/registbyebutton"   />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/imgOk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:src="@drawable/okbutton" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/imgNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="signNo"
                android:src="@drawable/cancelbutton"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.02"/>

</LinearLayout>